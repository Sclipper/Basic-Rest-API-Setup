{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "extends": ["plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
	"parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
	"ignorePatterns": [
    "dist"
  ],
  "env": {
    "es2021": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".ts"],
        "paths": ["src"]
      }
    }
  },
  "rules": {
    "consistent-return": "off",
    "prettier/prettier": [
      "warn",
      {
        "semi": false,
        "singleQuote": true,
        "endOfLine": "auto",
        "printWidth": 100,
        "trailingComma": "all",
        "bracketSpacing": true
      }
    ],
    "no-await-in-loop": "off",
    "implicit-arrow-linebreak": "off",
    "semi": 0,
    "import/extensions": "off",
    "import/no-unresolved": 0,
    "camelcase": 0,
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    "object-curly-newline": "off"
  }
}